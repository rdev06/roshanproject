extends layout

block content
    p #{message}
    form(action="/users/edit/"+user._id, method="post")
        fieldset
            legend Edit
            label(for="name") Name
            br
            input(type="text" name="name" value=user.name placeholder="Enter your Name")
            if errors
                if errors.name
                    p #{errors.name.msg}
            br
            label(for="email") Email
            br
            input(type="email" name="email" value=user.email placeholder="Enter your Email")
            if errors
                if errors.email
                    p #{errors.email.msg}
            br
            label(for="password") Password
            br
            input(type="password" name="password" value=user.password placeholder="Make new password")
            if errors
                if errors.password
                    p #{errors.password.msg}
            br
            label(for="rpassword") Re enter password
            br
            input(type="password" name="rpassword" value=user.rpassword placeholder="Confirm your password")
            if errors
                if errors.rpassword
                    p #{errors.rpassword.msg}
            br
            label(for="phone") Phone
            br
            input(type="number" name="phone" value=user.phone placeholder="Enter your Phone number")
            if errors
                if errors.phone
                    p #{errors.phone.msg}
            br
            br
            input(type="submit" value="UPDATE")